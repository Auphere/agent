# ===================================
# AUPHERE AGENT - Environment Variables
# ===================================
# Copy this file to .env and fill in your values

# -----------------------------------
# Service Configuration
# -----------------------------------
SERVICE_NAME=auphere-agent
VERSION=0.1.0
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# -----------------------------------
# Networking
# -----------------------------------
AGENT_HOST=0.0.0.0
AGENT_PORT=8001
FRONTEND_URL=http://localhost:3000

# -----------------------------------
# LLM API Keys
# -----------------------------------
# OpenAI API Key (required for gpt-4o-mini, gpt-3.5-turbo, gpt-4-turbo, gpt-4)
OPENAI_API_KEY=sk-...

# Anthropic API Key (required for claude-3)
ANTHROPIC_API_KEY=sk-ant-...

# -----------------------------------
# External Data API Keys (BETA VERSION)
# -----------------------------------
# ðŸŽ¯ HIGH PRIORITY - Required for core functionality
# Google Places API Key (PRIMARY search tool - real-time place data)
GOOGLE_PLACES_API_KEY=AIza...

# Google Maps API Key (routing and directions - can reuse Places API key)
GOOGLE_MAPS_API_KEY=AIza...

# OpenWeather API Key (weather context for recommendations)
OPENWEATHER_API_KEY=...

# ðŸŸ¡ MEDIUM PRIORITY - Optional but recommended
# SerpAPI Key (enhanced web search - $50/month, or use free DuckDuckGo)
SERPAPI_KEY=...

# ðŸŸ¢ LOW PRIORITY - Future enhancements
# Yelp Fusion API Key (alternative reviews and ratings)
YELP_FUSION_API_KEY=...

# Foursquare API Key (real-time popularity data)
FOURSQUARE_API_KEY=...

# Trustpilot API Key (sentiment analysis from reviews)
TRUSTPILOT_API_KEY=...

# Instagram API Key (visual vibes and trends)
INSTAGRAM_API_KEY=...

# Spotify API Key (venue music matching)
SPOTIFY_API_KEY=...

# Apify API Key (web scraping for occupancy data)
APIFY_API_KEY=...

# -----------------------------------
# Database (PostgreSQL)
# -----------------------------------
# Connection string for PostgreSQL
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/auphere-agent

# -----------------------------------
# Redis Cache
# -----------------------------------
# Enable/disable Redis caching
REDIS_ENABLED=true

# Redis connection URL
# Format: redis://host:port/db_number
REDIS_URL=redis://localhost:6379/0

# Redis key prefix for namespacing
REDIS_KEY_PREFIX=auphere:agent

# Cache TTLs (in seconds)
CACHE_TTL_INTENT=3600  # 1 hour
CACHE_TTL_PLACES=1800  # 30 minutes
CACHE_TTL_TRANSLATION=86400  # 24 hours
CACHE_TTL_USER_CONTEXT=3600  # 1 hour

# -----------------------------------
# External Services
# -----------------------------------
# Auphere Places API (Rust microservice)
PLACES_API_URL=http://localhost:8002
PLACES_API_TIMEOUT=10

# Backend REST API
BACKEND_URL=http://localhost:8000

# -----------------------------------
# Localization
# -----------------------------------
# Comma-separated list of supported language codes
SUPPORTED_LANGUAGES=es,en,ca,gl

# Default language fallback
DEFAULT_LANGUAGE=es

# -----------------------------------
# Model Routing
# -----------------------------------
# Enable budget mode (always use cheapest model)
BUDGET_MODE=false

# Preferred model override (leave empty for automatic routing)
PREFERRED_MODEL=

# -----------------------------------
# Observability
# -----------------------------------
# Enable request tracing
ENABLE_TRACING=true
TRACE_LEVEL=debug

# -----------------------------------
# CORS Configuration
# -----------------------------------
# Comma-separated list of allowed origins (leave empty to use FRONTEND_URL)
# Example: ALLOWED_ORIGINS=http://localhost:3000,https://app.auphere.com
ALLOWED_ORIGINS=

# -----------------------------------
# Advanced Configuration
# -----------------------------------
# Maximum conversation turns to keep in memory
MAX_MEMORY_TURNS=10

# Maximum tokens for context window
MAX_CONTEXT_TOKENS=2000

# Request timeout for external APIs (seconds)
API_TIMEOUT=30

